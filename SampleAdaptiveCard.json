{
    "contentType":"application/vnd.microsoft.card.adaptive",
    "content":{
       "$schema":"http://adaptivecards.io/schemas/adaptive-card.json",
       "type":"AdaptiveCard",
       "version":"1.0",
       "body":[
          {
             "type":"ColumnSet",
             "columns":[
                {
                   "type":"Column",
                   "width":2,
                   "items":[
                      {
                         "type":"TextBlock",
                         "text":"Hallo Python Guru!!!",
                         "weight":"bolder",
                         "size":"medium"
                      },
                      {
                         "type":"TextBlock",
                         "text":"Es ist toll, wie gut Du schon geworden bist. So starten wir gemeinsam in die Zukunft",
                         "isSubtle":true,
                         "wrap":true
                      },
                      {
                         "type":"TextBlock",
                         "text":"Die Eingaben werden als Attachment abgelegt",
                         "isSubtle":true,
                         "wrap":true,
                         "size":"small"
                      },
                      {
                         "type":"TextBlock",
                         "text":"Deine Kontaktinformation",
                         "wrap":true
                      },
                      {
                         "type":"Input.Text",
                         "id":"Name",
                         "placeholder":"Terry Gilliam"
                      },
                      {
                         "type":"TextBlock",
                         "text":"Dein Git Hub Repository",
                         "wrap":true
                      },
                      {
                         "type":"Input.Text",
                         "id":"Url",
                         "placeholder":"https://github.com/joemulti/ospak"
                      },
                      {
                         "type":"TextBlock",
                         "text":"Deine EMail",
                         "wrap":true
                      },
                      {
                         "type":"Input.Text",
                         "id":"Email",
                         "placeholder":"bjoern.engel@example.com",
                         "style":"email"
                      },
                      {
                         "type":"TextBlock",
                         "text":"Telefonnummer"
                      },
                      {
                         "type":"Input.Text",
                         "id":"Tel",
                         "placeholder":"+49 14 156561 ",
                         "style":"tel"
                      }
                   ]
                },
                {
                   "type":"Column",
                   "width":1,
                   "items":[
                      {
                         "type":"Image",
                         "url":"https://www.experteach.eu/de/assets/images/training/et-networking.png",
                         "size":"auto"
                      }
                   ]
                }
             ]
          }
       ],
       "actions":[
          {
             "type":"Action.Submit",
             "title":"Submit"
          }
       ]
    }
 }